<header class="mb-8">
  <%= link_to("< Products", products_path, class: "text-blue-500") %>
</header>

<div class="flex">
  <div class="w-1/3">
    <%= image_tag(product_image_url(@product)) %>
  </div>

  <div class="ml-8">
    <h1 class="text-xl mb-4"><strong class="font-semibold"><%= @product.pattern_name %></strong> <%= @product.color_name %></h1>

    <%= pricing_html(:basic_pricing, @product, current_account, :usd, :unit) %>
    <%= pricing_html(:basic_pricing, @product, current_account, :cad, :unit) %>

    <div class="mb-4" data-controller="product-stock" data-product-stock-sku-value="<%= @product.id %>">
      <div id="product-stock-container"></div>
      <div id="bolts-and-small-cuts-container"></div>

      <button type="button" class="text-blue-500 text-sm" data-action="product-stock#reload">Reload</button>
    </div>

<!--    <h2 class="text-sm font-semibold">JSON</h2>-->
<!--    <pre class="text-gray-500 text-sm"><%#= JSON.pretty_generate(@product.as_json) %></pre>-->
  </div>
</div>
